<%= render "shared/partial" %>
<p id="notice"><%= notice %></p>
<table>
<thead>
<tr>
<td>画像</td>
<td>施設名</td>
<td>紹介文</td>
<td>合計金額</td>
<td>チェックイン</td>
<td>チェックアウト</td>
<td>予約確定日時</td>
</tr>
</thead>

<tbody>
 <% if @reservations.count > 0 %>
 <% @reservations.each do |reservation| %>
      <tr>
        <td><%= image_tag reservation.room.image ,size:"50x50", class: 'reservation.room-image' if reservation.room.image.attached? %></td>
        <td><%= reservation.room.room_name %></td>
        <td><%= reservation.room.room_detail %></td>
        <td><%= reservation.total_price %></td>
        <td><%= reservation.checkin_day.strftime("%Y/%m/%d") %></td>
        <td><%= reservation.checkout_day.strftime("%Y/%m/%d") %></td>
        <td><%= reservation.created_at.strftime("%Y/%m/%d %H:%M") %></td>       
        <td><%= link_to "削除", reservation, method: :delete, data: { confirm: "本当に削除しますか？" } %></td>
         </td>
        </tr>
    <% end %>
    <% else %>
            <td colspan ="6">現在登録している施設はありません</td>
    <% end %>
</tbody>
    </table>
