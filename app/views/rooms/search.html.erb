<%= render "shared/partial" %>

<p id="notice"><%= notice %></p>

<h1> 検索一覧</h1>

<h3>検索画面</h3>
<%= search_form_for @q , url: search_rooms_path do |f| %>
  <%= f.search_field :room_address_cont %>
  <%= f.submit '検索' %>
<% end %>
  
<table>
  <thead>
    <tr>
      <th>施設名</th>
      <th>金額</th>
      <th>住所</th>
      <th>施設詳細</th>
      <th>施設画像</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
    <% @results.each do |room| %>
      <tr>
        <td><%= room.room_name %></td>
        <td><%= room.room_price %></td>
        <td><%= room.room_address %></td>
        <td><%= room.room_detail %></td>
        <td><%= image_tag room.image, class: 'room-image' if room.image.attached? %>
        <td><%= link_to "詳細", room %></td>
    <% end %></td>
      </tr>
    
 
  </tbody>
</table>


<%= link_to 'Top', root_path %>