 <header>
 <div class="site_header">
   <%=link_to"Potepan Share","/books/index",class:"site_title" %>

 <% if user_signed_in? %> 
  <!-- ユーザーがログインしていた時の処理 -->
    <div class="hamburger-menu">
        <input type="checkbox" id="menu-btn-check">
        <label for="menu-btn-check" class="menu-btn"><span></span></label>
              <div class="menu-content">
            <ul>        
    <% if current_user.image.attached? %>
    <%= image_tag current_user.image ,size:"50x50"%>
    <% else %>
    <%= image_tag 'https://rails-02-sample.herokuapp.com/assets/common/default-avatar-7a6cbfd7993e89f24bfc888f4a035a83c6f1428b8bdc47eed9095f2799a40153.png' %>
    <% end %>  
          <%= current_user.name %>
                <li>
                    <%=link_to "施設を新規登録する", :new_room %>
                </li>
                <li>
                      <%=link_to "予約済み一覧", :reservations_index %>
                </li>
                <li>
                      <%=link_to "登録済み一覧", :rooms_index %>
                </li>
                <li>
                      <%=link_to "アカウント設定", :users_index %>
                </li>
                <li>
                    <%= link_to "ログアウト", destroy_user_session_path, method: :delete %> <!-- ログアウトをする -->
                </li>
            </ul>
        </div>
    </div>
    <% else %>
  <!-- ユーザーがログインしていなかった時の処理 -->
  <%= link_to "ログイン", new_user_session_path, class: 'post' %> <!-- ログイン画面に移行する -->
  <%= link_to "新規登録", new_user_registration_path, class: 'post' %> <!-- 新規登録画面に移行する -->
<% end %>
</div>
</header>



